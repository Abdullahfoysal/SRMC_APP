<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context="com.nishant.mathsample.navigationMenu"
    tools:openDrawer="start">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.nishant.mathsample.problemActivity">
        <TextView
            android:id="@+id/activityTitleId"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Problems"
            android:textColor="#D50101"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="25sp"/>

        <GridLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <android.support.v7.widget.CardView
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">




            <TextView
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#1E88E5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. "
                android:textStyle="bold"
                android:textSize="20sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_marginRight="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:padding="5dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

            <TextView
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#1E88E5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE "
                android:textStyle="bold"
                android:textSize="20sp"/>

            </android.support.v7.widget.CardView>

        </GridLayout>

    <ListView
        android:id="@+id/problemActivityListViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#4E4A4A"
        android:dividerHeight="2dp"
        android:listSelector="#06F50E">

    </ListView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0E74DF"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="10dp"/>
        <FrameLayout
            android:id="@+id/fragment_containerLowerPartOfToolbarId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <android.support.design.widget.NavigationView

        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_test"/>





</android.support.v4.widget.DrawerLayout>