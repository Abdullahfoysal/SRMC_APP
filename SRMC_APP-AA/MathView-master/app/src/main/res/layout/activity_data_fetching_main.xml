<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dataFetchingActivityMain">

    <EditText
        android:hint="title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameTextId"
        android:inputType="text"/>

    <EditText
        android:hint="problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTextId"
        android:inputType="text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saveToServer"
        android:onClick="saveToDatabase"
        android:id="@+id/SaveToServerDataButtonId"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fetchFromServer"
        android:onClick="fetchdata"
        android:id="@+id/fetchDataButtonId"/>

    <TextView
        android:id="@+id/fetchDatashowTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>




</LinearLayout>