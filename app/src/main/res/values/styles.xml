<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="toolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/homeBackGroundColor</item>
    </style>



    <style name="Registration" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <!--       <item name="android:background">@color/colorAccent</item>-->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginLeft">150dp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="saveButton">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="loadButton">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorAccent</item>

    </style>
    <style name="addProblems">
        <item name="android:background">@color/problem</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">start</item>
        <item name="android:lines">10</item>
    </style>

    <style name="addSolution">
        <item name="android:background">@color/problemSolution</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">start</item>
        <item name="android:lines">5</item>
    </style>

    <style name="menuStyle">
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:color">@color/colorAccent</item>
    </style>
    <style name="preview">
        <item name="android:hint">mathJx view</item>
        <item name="android:background">@color/problemSolution</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="MyTheme"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
