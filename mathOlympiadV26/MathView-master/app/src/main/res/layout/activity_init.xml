<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbackground"
    android:orientation="vertical"
    tools:context=".initActivity">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/initGifId"
        android:padding="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/d1"
        />
    <Button
      android:layout_gravity="center"
        android:background="#5DA9F0"
        android:id="@+id/initLoginButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"/>
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#54E956"
        android:id="@+id/guestLoginButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest"/>

    </LinearLayout>

</LinearLayout>